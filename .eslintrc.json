{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react", "html", "security", "codeceptjs", "jest"
    ],
    "rules": {
        "comma-dangle": ["error", "never"],
        "complexity": ["warn", 20],
        "no-plus-plus": "off",
        "quotes": ["error", "double"],
        "max-len": ["error", {
            "code": 120
        }],
        "react/jsx-one-expression-per-line": "off",
        "object-curly-newline": "off",
        "linebreak-style": "off"
    }
}